{
  "name": "AgentChat Design System",
  "version": "2.0.0",
  "description": "Token-based design system for AgentChat - warm, minimal, agent-platform aesthetic",
  
  "colors": {
    "background": {
      "DEFAULT": "#09090b",
      "primary": "#09090b",
      "secondary": "#18181b",
      "tertiary": "#27272a",
      "elevated": "#3f3f46"
    },
    "foreground": {
      "DEFAULT": "#fafafa",
      "primary": "#fafafa",
      "secondary": "#a1a1aa",
      "tertiary": "#71717a",
      "muted": "#52525b",
      "disabled": "#3f3f46"
    },
    "accent": {
      "lobster": {
        "DEFAULT": "#ff5722",
        "50": "#fff5f2",
        "100": "#ffe8e0",
        "200": "#ffcdc0",
        "300": "#ffaa95",
        "400": "#ff7d5c",
        "500": "#ff5722",
        "600": "#f04d1a",
        "700": "#d43d12",
        "800": "#a83011",
        "900": "#7c2b13"
      },
      "coral": "#ff8a65",
      "gold": "#fbbf24",
      "green": "#22c55e",
      "blue": "#3b82f6",
      "purple": "#8b5cf6",
      "pink": "#ec4899"
    },
    "border": {
      "DEFAULT": "rgba(255, 255, 255, 0.1)",
      "subtle": "rgba(255, 255, 255, 0.06)",
      "hover": "rgba(255, 255, 255, 0.15)",
      "active": "rgba(255, 255, 255, 0.2)"
    },
    "status": {
      "online": "#22c55e",
      "away": "#fbbf24",
      "busy": "#ef4444",
      "offline": "#71717a"
    }
  },

  "space": {
    "0": "0px",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px",
    "12": "48px",
    "16": "64px",
    "20": "80px",
    "24": "96px"
  },

  "radius": {
    "none": "0px",
    "sm": "6px",
    "DEFAULT": "8px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },

  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "-apple-system", "sans-serif"],
      "mono": ["JetBrains Mono", "Fira Code", "monospace"]
    },
    "fontSize": {
      "xs": ["12px", { "lineHeight": "16px" }],
      "sm": ["14px", { "lineHeight": "20px" }],
      "base": ["16px", { "lineHeight": "24px" }],
      "lg": ["18px", { "lineHeight": "28px" }],
      "xl": ["20px", { "lineHeight": "28px" }],
      "2xl": ["24px", { "lineHeight": "32px" }],
      "3xl": ["30px", { "lineHeight": "36px" }],
      "4xl": ["36px", { "lineHeight": "40px" }],
      "5xl": ["48px", { "lineHeight": "1" }]
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    }
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
    "DEFAULT": "0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -2px rgba(0, 0, 0, 0.3)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -2px rgba(0, 0, 0, 0.3)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.5), 0 4px 6px -4px rgba(0, 0, 0, 0.4)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 8px 10px -6px rgba(0, 0, 0, 0.4)",
    "glow": "0 0 20px rgba(255, 87, 34, 0.3)",
    "glow-lg": "0 0 40px rgba(255, 87, 34, 0.5)"
  },

  "transitions": {
    "fast": "150ms ease",
    "normal": "250ms ease",
    "slow": "350ms ease"
  },

  "zIndex": {
    "base": "0",
    "dropdown": "100",
    "sticky": "200",
    "modal": "300",
    "popover": "400",
    "tooltip": "500"
  },

  "components": {
    "button": {
      "sizes": {
        "sm": { "height": "32px", "padding": "0 12px", "fontSize": "14px" },
        "DEFAULT": { "height": "40px", "padding": "0 16px", "fontSize": "14px" },
        "lg": { "height": "48px", "padding": "0 24px", "fontSize": "16px" }
      },
      "radius": "8px"
    },
    "card": {
      "padding": "16px",
      "radius": "12px",
      "border": "1px solid rgba(255, 255, 255, 0.06)"
    },
    "input": {
      "height": "40px",
      "padding": "0 12px",
      "radius": "8px"
    },
    "avatar": {
      "sizes": {
        "sm": "32px",
        "DEFAULT": "40px",
        "lg": "56px",
        "xl": "80px"
      }
    }
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  }
}
